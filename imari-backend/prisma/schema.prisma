generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Transaction {
  id             String   @id @default(cuid())
  clientName     String
  physician      String
  amount         Float
  paymentMethod  PaymentMethod
  discount       Float?    // optional
  notes          String?   // optional
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
}

enum PaymentMethod {
  CASH
  MOBILE
  BANK
  CREDIT
}

